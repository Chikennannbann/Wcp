
public class Chapter15_4 {
	public static void main(String[] args) {
		for (int i = 1; i <= 2; i++) {
			ThreadSample mt = new TreadSample(i);
			Thread thread = new Tread(mt);
			thread.start();
		}
		
		for (int i = 1; i <= 3; i++) {
			try {
				Tread.sleep(1000);
				System.out.println("Chapter15＿4のスレッド：" + i + "回目");
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}

}
