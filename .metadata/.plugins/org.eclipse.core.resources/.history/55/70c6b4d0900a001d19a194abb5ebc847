
public class Chapter15_4 {
	public static void main(String[] args) {
		for (int i = 1; i <= 2; i++) {
			ThreadSample r = new TreadSample();
			Thread t = new Tread(r);
			t.start();
		}
		
		for (int i = 1; i <= 3; i++) {
			try {
				Tread.sleep(1000);
				System.out.pritnln("Chapter15＿4のスレッド：" + i + "回目");
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}

}
